#! /usr/bin/env python
# encoding: utf-8

def build(ctx):
    ctx.program(target = 'pub',
                use = 'default zcm',
                source = 'Pub.cpp',
                install_path = None)

    ctx.program(target = 'sub',
                use = 'default zcm',
                source = 'Sub.cpp',
                install_path = None)

    ctx.program(target = 'inproc',
                use = 'default zcm',
                source = 'Inproc.cpp',
                install_path = None)

    ctx.program(target = 'serial',
                use = 'default zcm',
                source = 'Serial.cpp',
                install_path = None)
