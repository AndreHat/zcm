#! /usr/bin/env python
# encoding: utf-8

def build(ctx):
    ctx.env.INCLUDES_zcm_tools = [ctx.path.abspath()]
    ctx.recurse('logger');
    ctx.recurse('logplayer');
    ctx.recurse('bridge');
    ctx.recurse('repeater');
    ctx.recurse('spy-lite');
    ctx.recurse('spy-peek');
    ctx.recurse('indexer');
